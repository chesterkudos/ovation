{
  "name": "@kudos/source",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nx run-many -t build",
    "branches:stale:dr": "DRY_RUN=true bash bin/clean-stale.sh",
    "branches:stale": "DRY_RUN=false bash bin/clean-stale.sh",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "diff-exit-code": "git diff --exit-code",
    "prettier:old": "prettier . --write .",
    "prettier": "nx run-many -t prettier --verbose",
    "prettier:check": "prettier . --check",
    "prettier:quick": "pretty-quick --staged",
    "pre-commit": "run-s system-check",
    "pre-push": "echo not setup yet",
    "serve": "nx run-many -t serve",
    "prepare": "husky install",
    "serve:react-app": "nx run kudos-react-app:serve",
    "serve:next-app": "nx run kudos-next-app:serve",
    "system-check": "run-s prettier:quick typescript lint test build",
    "typescript": "nx run-many -t typescript",
    "unit-test": "nx run-many -t test"
  },
